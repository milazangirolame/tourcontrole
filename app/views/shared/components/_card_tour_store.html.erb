<div class="col-xs-12 col-sm-4">
  <div class="card-tour-store" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://via.placeholder.com/300x150');">
    <div class="card-category"><%= tour_store.name %></div>
    <div class="card-description">
      <h2><%= tour_store.description.truncate_words(5) %></h2>
      <p></p>
    </div>
    <a class="card-link" href="<%= tour_store_path(tour_store)%>" ></a>
  </div>
</div>
