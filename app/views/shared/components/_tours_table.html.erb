<% if @activities.present? %>
    <table class='table'>
      <tr>
        <th>
          Tour
        </th>
        <th>
          Dada
        </th>
        <th>
          Vagas
        </th>
        <th>
          Editar
        </th>
      </tr>

      <% @activities.each do |activity|  %>
        <tr>
          <td>
            <%= activity.name  %>
          </td>
          <td>
            <%= activity.start_date  %>
          </td>
          <td>
            <%= activity.max_spots %>
          </td>
          <td>
            <%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_tour_store_activity_path(activity.tour_store, activity) %>
          </td>
        </tr>
      <% end %>
    </table>
    <% else %>
    <h1>Crear tour</h1>
  <% end %>
