<div class="navbar-tour-store">
  <!-- Logo -->
  <% logo_link = @tour_store.nil? ? tour_store_path(@activity.tour_store) : tour_store_path(@tour_store) %>
  <%= link_to logo_link, class: "navbar-tour-store-brand" do %>
    <%= image_tag "customer_logo_placeholder.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-tour-store-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Host", "#", class: "navbar-tour-store-item navbar-tour-store-link" %>
      <%= link_to "Trips", "#", class: "navbar-tour-store-item navbar-tour-store-link" %>
      <%= link_to "Messages", "#", class: "navbar-tour-store-item navbar-tour-store-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-tour-store-item">
        <div class="dropdown">
          <%= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-tour-store-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-tour-store-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>


      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login "), new_user_session_path, class: "navbar-tour-store-item navbar-tour-store-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-tour-store-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-tour-store-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>

