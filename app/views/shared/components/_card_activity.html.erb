<div class="col-xs-12 col-sm-4">
  <div class="card card-activity" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://via.placeholder.com/350x150');">
    <div class="card-category">R$<%= activity.price  %></div>
    <div class="card-description">
      <h2><%= activity.name  %></h2>
      <p><%= activity.description.truncate_words(5)  %></p>
    </div>

    <a class="card-link" href="<%= activity_path(activity)  %>" ></a>
  </div>
</div>
