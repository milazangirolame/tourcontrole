<% if @activities.present? %>

    <table class=' table-format reg-fonts'>
      <tr>
        <th>
          Tour
        </th>
        <th>
          Preço
        </th>
        <th>
          Vagas
        </th>
        <th>
          Ações
        </th>
      </tr>

      <% @activities.each do |activity|  %>
        <tr>
          <td>
            <%= activity.name  %>
          </td>
          <td>
            <%= humanized_money_with_symbol activity.price  %>
          </td>
          <td>
            <%= activity.max_spots %>
          </td>
          <td>
            <%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, activity_path(activity), method: :delete, data: {confirm: "Esta ação é definitiva \n Tem certeza que quer excluir o tour? \n #{activity.name}  "}, class: 'btn btn-danger btn-xs'  %>
            <%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_tour_store_activity_path(activity.tour_store, activity), class: 'btn btn-xs btn-primary' %>
            <%= link_to '<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'.html_safe, tour_store_activity_audit_path(activity.tour_store, activity), class: 'btn btn-xs btn-primary' %>

            <%= link_to '<span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span>'.html_safe, activity_path(activity), class: 'btn btn-xs btn-success' %>
          </td>
        </tr>
      <% end %>
    </table>
    <%= link_to '<i class="fas fa-plus"></i> Novo Tour'.html_safe,
   new_tour_store_activity_path(@tour_store),
   class: 'btn btn-primary btn-md' %>
    <% else %>
    <h3>Adicone o seu primer tour</h3>
    <%= link_to '<i class="fas fa-plus"></i> Novo Tour'.html_safe,
   new_tour_store_activity_path(@tour_store),
   class: 'btn btn-primary btn-md' %>
  <% end %>
