
<%= simple_form_for([tour_store, activity], :html => {:multipart => :true}) do |f| %>
  <%= f.input :name  %>
  <%= f.input :description %>
  <%= f.input :max_spots %>
  <%= f.input :departure_location %>
  <%= f.input :start_date, input_html: { class: "flatpickr-input" }, as: :string %>
  <%= f.input :end_date %>
  <%= f.input :starts_at %>
  <%= f.input :ends_at %>
  <%= f.input :price %>
  <%= f.input :photos, as: :file, :input_html => {:multiple => true}, name: "activity[activity_attributes][photos]" %>
  <%= f.submit class: 'btn btn-primary btn-lg' %>
<% end %>
