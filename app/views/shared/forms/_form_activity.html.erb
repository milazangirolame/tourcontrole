<div class="row">
  <div class="col-xs-12 col-sm-10 col-md-8">
    <%= simple_form_for([tour_store, activity], html: {multipart: true, class: 'form-activity'}) do |f| %>
      <%= f.error_notification %>
      <div class="form-row">
        <div class="col-xs-12">
          <h4>Insira os detalhes do tour</h4>
        </div>
      </div>
      <div class="form-row">
        <div class="col-xs-12 col-sm-6">
          <%= f.input :name, label: false, placeholder: 'Nome do Tour'%>
          <%= f.input :description, label: false, placeholder: 'Descrição do Tour, venda aqui o seu peixe '%>
          <%= f.input :departure_location, label: false, placeholder: 'endereço de partida' %>
        </div>
        <div class="col-xs-12 col-sm-6">
          <div class="col-xs-12 col-sm-6">
            <%= f.input :starts_at, input_html: { class: "flatpickr-input" }, as: :string, label: false, placeholder: 'Inicia as:'%>
            <%= f.input :max_spots, label: false, placeholder: 'Limite de vagas'%>
          </div>

          <div class="col-xs-12 col-sm-6">
            <%= f.input :ends_at, input_html: { class: "flatpickr-input" }, as: :string, label: false, placeholder: 'Finaliza as:'%>
            <%= f.input :price, label: false, placeholder: 'Preço R$' %>
          </div>
          <div class="col-xs-12">
            <%= f.select_recurring :recurring, nil, allow_blank: true  %>
            <%= f.input :photos, as: :file, :input_html => {:multiple => true}, name: "activity[activity_attributes][][photos]", label: "<span class='glyphicon glyphicon-picture' aria-hidden='true'></span>
            Adicionar fotos do Tour".html_safe %>
          </div>
        </div>
      </div>
      <div class="form-row">
        <div class="col-xs-6">
          <div class="col-xs-12">
            <%= f.input :custom_installments, checked_value: true, input_html: {class: 'big-checkbox terms-box', id: 'installment_check'} , label:'Limitar parcelas' %>
          </div>
          <div class="col-xs-12" id='to_reload'>
          <%= f.input :installments_limit , collection: 1..12, label: 'Escolha o máximo de parcelas', selected: 1, input_html: {id: 'installments_options'} %>

          </div>

        </div>
        <div class="col-xs-6">

        </div>
      </div>
      <div class="form-row">
        <div class="col-xs-12">
          <%= f.submit class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
